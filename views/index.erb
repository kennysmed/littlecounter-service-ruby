<h2>Counters</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Address</th>
      <th>Name</th>
      <th>Count</th>
    </tr>
  </thead>
  <tbody>
    <% devices.each do |address, device| %>
      <tr>
        <td><%= address %></td>
        <td><%= device['name'] %></td>
        <td><%= counters[address] || "<small>no value received</small>" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
